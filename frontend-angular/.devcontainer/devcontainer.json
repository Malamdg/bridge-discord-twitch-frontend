{
    "name": "Angular Frontend",
    "dockerComposeFile": [
        "../docker-compose.yml",
        "../docker-compose.dev.yml"
    ],
    "service": "frontend",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "angular.ng-template",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "ms-vscode.vscode-typescript-tslint-plugin",
                "formulahendry.auto-close-tag"
            ]
        }
    },

    "forwardPorts": [4200],

    "remoteUser": "angular",

    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    }
}